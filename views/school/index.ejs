<% layout('layouts/boilerplate') %>
<h1>All Students</h1>
<a href="/school/new">Add New Student</a>
<ul>
  <% for(let student of students){%>
  <div class="card" mb-3>
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" alt="" src="<%=student.image %>" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=student.name %></h5>
          <p class="card-text"><%=student.description %></p>

          <p class="card-text">
            <small class="text-muted"><%=student.address %> </small>
          </p>
          <a class="btn btn-primary" href="/school/<%=student._id %> "
            >View <%=student.name %>
          </a>
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>
