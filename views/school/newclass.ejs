<% layout('layouts/boilerplate') %>
<h1 class="text-center">Create New Class</h1>

<div class="col-6 offset-3">
  <form action="/school/<%=school._id %>/newclass" method="POST">
    <div class="mb-3">
      <label class="form-label" for="name">Name</label>
      <input class="form-control" type="text" id="name" name="newclass[name]" />
    </div>

    <button class="btn btn-success">Add Class</button>
  </form>
  <a href="/campgrounds">All School</a>
</div>
